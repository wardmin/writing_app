<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="user-field-hide">
    <%= f.label :writing_goal %>
    <div class="user-writing-settings">
    I want to write <%= f.number_field :desired_amount %> <%= f.select :track_hours, options_for_select([['times', false], ['hours', true]], "#{@user.track_hours}") %> per <%= f.select :desired_interval, options_for_select([['day', 1], ['week', 7], ['month', 30]], "#{@user.desired_interval}")  %>
    </div>
  </div>

   <div class="actions">
    <%= f.submit "Update Settings"%>
  </div>

  <% end %>